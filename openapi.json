{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "API Dokümantasyonu",
    "description": "API ve servisler ile ilgili tüm detaylar",
    "contact": {
      "name": "API Destek",
      "email": "api-destek@example.com"
    },
    "x-logo": {
      "url": "logo.png",
      "altText": "Logo"
    }
  },
  "servers": [
    {
      "url": "https://api.example.com/v1",
      "description": "Production API Server"
    },
    {
      "url": "https://sandbox-api.example.com/v1",
      "description": "Sandbox API Server"
    }
  ],
  "tags": [
    {
      "name": "Katalog",
      "description": "Katalog ile ilgili API endpointleri"
    },
    {
      "name": "Sipariş",
      "description": "Sipariş ile ilgili API endpointleri"
    }
  ],
  "paths": {
    "/katalog/urunler": {
      "get": {
        "tags": ["Katalog"],
        "summary": "Ürün Listesi",
        "description": "Tüm ürünlerin listesini getirir",
        "operationId": "getProducts",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "Sayfa başına gösterilecek öğe sayısı",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 20,
              "minimum": 1,
              "maximum": 100
            }
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Sayfalama için başlangıç indeksi",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 0,
              "minimum": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Başarılı yanıt",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductList"
                }
              }
            }
          },
          "400": {
            "description": "Geçersiz istek",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Yetkilendirme hatası",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Katalog"],
        "summary": "Yeni Ürün Ekle",
        "description": "Kataloga yeni bir ürün ekler",
        "operationId": "createProduct",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewProduct"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Ürün başarıyla oluşturuldu",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "400": {
            "description": "Geçersiz istek",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Yetkilendirme hatası",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/katalog/urunler/{productId}": {
      "get": {
        "tags": ["Katalog"],
        "summary": "Ürün Detayları",
        "description": "Belirli bir ürünün detaylarını getirir",
        "operationId": "getProductById",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "description": "Ürün ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Başarılı yanıt",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "404": {
            "description": "Ürün bulunamadı",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Katalog"],
        "summary": "Ürünü Güncelle",
        "description": "Mevcut bir ürünü günceller",
        "operationId": "updateProduct",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "description": "Ürün ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Product"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ürün başarıyla güncellendi",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "404": {
            "description": "Ürün bulunamadı",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/siparis/siparisler": {
      "get": {
        "tags": ["Sipariş"],
        "summary": "Sipariş Listesi",
        "description": "Tüm siparişlerin listesini getirir",
        "operationId": "getOrders",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "Sayfa başına gösterilecek öğe sayısı",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 20
            }
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Sayfalama için başlangıç indeksi",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Başarılı yanıt",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrderList"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "required": ["id", "name", "price"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Ürün benzersiz tanımlayıcısı"
          },
          "name": {
            "type": "string",
            "description": "Ürün adı"
          },
          "description": {
            "type": "string",
            "description": "Ürün açıklaması"
          },
          "price": {
            "type": "number",
            "format": "float",
            "description": "Ürün fiyatı"
          },
          "category": {
            "type": "string",
            "description": "Ürün kategorisi"
          },
          "stock": {
            "type": "integer",
            "description": "Stok miktarı"
          },
          "images": {
            "type": "array",
            "description": "Ürün görselleri",
            "items": {
              "type": "string",
              "format": "uri"
            }
          }
        }
      },
      "NewProduct": {
        "type": "object",
        "required": ["name", "price"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Ürün adı"
          },
          "description": {
            "type": "string",
            "description": "Ürün açıklaması"
          },
          "price": {
            "type": "number",
            "format": "float",
            "description": "Ürün fiyatı"
          },
          "category": {
            "type": "string",
            "description": "Ürün kategorisi"
          },
          "stock": {
            "type": "integer",
            "description": "Stok miktarı"
          },
          "images": {
            "type": "array",
            "description": "Ürün görselleri",
            "items": {
              "type": "string",
              "format": "uri"
            }
          }
        }
      },
      "ProductList": {
        "type": "object",
        "properties": {
          "total": {
            "type": "integer",
            "description": "Toplam ürün sayısı"
          },
          "limit": {
            "type": "integer",
            "description": "Sayfa başına ürün sayısı"
          },
          "offset": {
            "type": "integer",
            "description": "Sayfalamanın başlangıç indeksi"
          },
          "data": {
            "type": "array",
            "description": "Ürünler",
            "items": {
              "$ref": "#/components/schemas/Product"
            }
          }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Sipariş ID"
          },
          "customerId": {
            "type": "string",
            "description": "Müşteri ID"
          },
          "orderDate": {
            "type": "string",
            "format": "date-time",
            "description": "Sipariş tarihi"
          },
          "status": {
            "type": "string",
            "enum": ["new", "processing", "shipped", "delivered", "cancelled"],
            "description": "Sipariş durumu"
          },
          "items": {
            "type": "array",
            "description": "Sipariş kalemleri",
            "items": {
              "$ref": "#/components/schemas/OrderItem"
            }
          },
          "totalAmount": {
            "type": "number",
            "format": "float",
            "description": "Toplam sipariş tutarı"
          }
        }
      },
      "OrderItem": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "string",
            "description": "Ürün ID"
          },
          "quantity": {
            "type": "integer",
            "description": "Miktar"
          },
          "price": {
            "type": "number",
            "format": "float",
            "description": "Birim fiyat"
          }
        }
      },
      "OrderList": {
        "type": "object",
        "properties": {
          "total": {
            "type": "integer",
            "description": "Toplam sipariş sayısı"
          },
          "limit": {
            "type": "integer",
            "description": "Sayfa başına sipariş sayısı"
          },
          "offset": {
            "type": "integer",
            "description": "Sayfalamanın başlangıç indeksi"
          },
          "data": {
            "type": "array",
            "description": "Siparişler",
            "items": {
              "$ref": "#/components/schemas/Order"
            }
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "description": "Hata kodu"
          },
          "message": {
            "type": "string",
            "description": "Hata mesajı"
          },
          "details": {
            "type": "object",
            "description": "Hata detayları"
          }
        }
      }
    },
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-KEY"
      }
    }
  },
  "security": [
    {
      "ApiKeyAuth": []
    }
  ]
}
